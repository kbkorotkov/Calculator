<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- гланвый контейнер-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/main_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="32sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/back_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="back"
            android:textSize="18dp"
            android:layout_gravity="right"
            android:layout_marginRight="17dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <!-- контейнер с первым блоком кнопок-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/left_bracket_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="("
                    android:textSize="32dp"
                    android:layout_marginEnd="6dp"/>

                <Button
                    android:id="@+id/right_bracket_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text=")"
                    android:textSize="32dp"
                    android:layout_marginEnd="6dp"/>

                <Button
                    android:id="@+id/percent_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="%"
                    android:textSize="32dp"
                    android:layout_marginEnd="6dp"/>

                <Button
                    android:id="@+id/divide_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="/"
                    android:textSize="32dp"/>

            </LinearLayout>

            <!-- контейнер с вторым блоком кнопок-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/seven_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="7"
                    android:textSize="32dp"
                    android:layout_marginEnd="6dp"/>

                <Button
                    android:id="@+id/eight_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="8"
                    android:textSize="32dp"
                    android:layout_marginEnd="6dp"/>

                <Button
                    android:id="@+id/nine_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="9"
                    android:textSize="32dp"
                    android:layout_marginEnd="6dp"/>

                <Button
                    android:id="@+id/multiply_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="*"
                    android:textSize="32dp"/>

            </LinearLayout>

            <!-- контейнер с третьим блоком кнопок-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/four_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="4"
                    android:textSize="32dp"
                    android:layout_marginEnd="6dp"/>

                <Button
                    android:id="@+id/five_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="5"
                    android:textSize="32dp"
                    android:layout_marginEnd="6dp"/>

                <Button
                    android:id="@+id/six_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="6"
                    android:textSize="32dp"
                    android:layout_marginEnd="6dp"/>

                <Button
                    android:id="@+id/minus_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="-"
                    android:textSize="32dp"/>

            </LinearLayout>

            <!-- контейнер с вторым кнопок-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/one_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="1"
                    android:textSize="32dp"
                    android:layout_marginEnd="6dp"/>

                <Button
                    android:id="@+id/two_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="2"
                    android:textSize="32dp"
                    android:layout_marginEnd="6dp"/>

                <Button
                    android:id="@+id/three_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="3"
                    android:textSize="32dp"
                    android:layout_marginEnd="6dp"/>

                <Button
                    android:id="@+id/add_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="+"
                    android:textSize="32dp"/>

            </LinearLayout>

            <!-- контейнер с вторым кнопок-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/clear_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="c"
                    android:textSize="32dp"
                    android:layout_marginEnd="6dp"/>
                <Button
                    android:id="@+id/zero_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="0"
                    android:textSize="32dp"
                    android:layout_marginEnd="6dp"/>


                <Button
                    android:id="@+id/comma_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text=","
                    android:textSize="32dp"
                    android:layout_marginEnd="6dp"/>

                <Button
                    android:id="@+id/equals_button"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="="
                    android:textSize="32dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>